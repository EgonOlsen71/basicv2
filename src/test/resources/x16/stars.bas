10 SCREEN 128
20 RECT 0,0,319,199,0
30 SC=160
50 DIM SX(SC),SY(SC),DX(SC),DY(SC)
55 FOR I=0 TO SC:SX(I)=-1:NEXT
60 FOR I=0 TO SC
70 SX=SX(I):SY=SY(I):IF SX=-1 THEN GOSUB 1000:GOTO 120
80 PSET SX,SY,0
90 SX=SX+DX(I):SY=SY+DY(I)
100 IF SX<0 OR SX>319 OR SY<0 OR SY>199 THEN SX(I)=-1:GOTO 120
110 PSET SX,SY,1:SX(I)=SX:SY(I)=SY
120 NEXT
130 GET A$:IF A$="X" THEN SCREEN 2:END
140 GOTO 60
1000 SX(I)=165-10*RND(0):SY(I)=105-10*RND(0)
1010 DX(I)=(160-SX(I))*(RND(0)*3+1):DY(I)=(100-SY(I))*(RND(0)*3+1)
1020 IF ABS(DX(I))<0.1 THEN DX(I)=DX(I)*10
1030 IF ABS(DY(I))<0.1 THEN DY(I)=DY(I)*10
1040 RETURN