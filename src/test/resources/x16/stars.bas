10 SCREEN 128
20 RECT 0,0,319,199,0
30 SC=50:AI=7:TI$="000000":F=0:LT=TI:SH=SC*8
50 DIM SX(SH+8),SY(SH+8),DX(SH),DY(SH),OV%(SH)
55 FOR I=0 TO SH:OV%(I)=1:DX(I)=0:DY(I)=0:NEXT
60 FOR I=0 TO SH STEP 8:ID=I+AI
70 SX=SX(ID):SY=SY(ID)
80 IF OV%(I)=1 THEN GOSUB 1000
90 SX=SX+DX(I):SY=SY+DY(I):DX(I)=DX(I)*1.05:DY(I)=DY(I)*1.05
100 IF SX<0 OR SX>319 OR SY<0 OR SY>199 THEN OV%(I)=1:GOTO 125
120 PSET SX,SY,1:A3=(AI+1) AND 7:ID=I+A3:SX(ID)=SX:SY(ID)=SY
125 A2=I+((A3-1) AND 7):PSET SX(A2),SY(A2),12
126 A2=I+((A3-2) AND 7):PSET SX(A2),SY(A2),11
127 A2=I+((A3-3) AND 7):PSET SX(A2),SY(A2),0
130 NEXT:AI=(AI+1) AND 7
140 GET A$:IF A$="X" THEN SCREEN 2:END
150 GOTO 60
1000 SX(ID)=165-10*RND(0):SY(ID)=105-10*RND(0)
1010 DX(I)=(160-SX(ID))*(RND(0)*3+1):DY(I)=(100-SY(ID))*(RND(0)*3+1)
1020 IF ABS(DX(I))<0.2 THEN DX(I)=DX(I)*20
1030 IF ABS(DY(I))<0.2 THEN DY(I)=DY(I)*20
1035 OV%(I)=0:SX=SX(ID):SY=SY(ID)
1040 RETURN